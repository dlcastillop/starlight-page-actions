---
import Default from "@astrojs/starlight/components/PageTitle.astro";
import { Icon } from "@astrojs/starlight/components";

const currentPath = Astro.url.pathname.replace(/\/$/, "");
---

<Default />
<button id="copy-markdown" data-path={currentPath}>
  <Icon name="mdx" size="1rem" class="icon-default" />
  <Icon name="approve-check" size="1rem" class="icon-success" />
  Copy Markdown
</button>

<style>
  #copy-markdown {
    background-color: var(--sl-color-text-accent);
    color: var(--sl-color-black);
    border: 1px solid var(--sl-color-text-accent);
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.75rem;
    font-weight: 500;
    cursor: pointer;
    font-family: var(--sl-font);
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    transition: opacity 0.2s ease;
  }

  #copy-markdown:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }

  #copy-markdown :global(svg) {
    flex-shrink: 0;
  }

  .icon-success {
    display: none;
  }

  #copy-markdown.copied .icon-default {
    display: none;
  }

  #copy-markdown.copied .icon-success {
    display: block;
  }
</style>

<script>
  const copyButton = document.querySelector(
    "#copy-markdown"
  ) as HTMLButtonElement;

  copyButton?.addEventListener("click", async () => {
    try {
      copyButton.disabled = true;

      const currentPath = copyButton.dataset.path;
      const mdPath = `${currentPath}.md`;

      const res = await fetch(mdPath);
      const contentForClipboard = await res.text();

      await navigator.clipboard.writeText(contentForClipboard);

      copyButton.classList.add("copied");
      copyButton.disabled = false;

      setTimeout(() => {
        copyButton.classList.remove("copied");
      }, 3000);
    } catch (error) {
      console.log(error);
      copyButton.disabled = false;
    }
  });
</script>
